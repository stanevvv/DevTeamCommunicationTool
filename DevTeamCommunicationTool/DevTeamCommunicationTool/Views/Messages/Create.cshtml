@model DevTeamCommunicationTool.Areas.Identity.Data.Message

@{
    ViewData["Title"] = "Write a new message";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Write a new message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" placeholder="Enter message" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecieverEmail" class="control-label">Send to</label>
                    <input asp-for="RecieverEmail" class="form-control" placeholder="Enter email" type="email" />
                    <div class="text-warning">Provide an existing email in the current team. Register a new account if needed.
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />                
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Inbox</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
